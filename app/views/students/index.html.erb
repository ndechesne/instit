
<div class="page-header">
     <h1>Liste des Eleves</h1>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>Lastname</th>
    <th>Firstname</th>
    <th>Birth</th>
    <th>Gender</th>
    <th>Classes</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @students.each do |student| %>
  <tr>
    <td><%= student.lastName %></td>
    <td><%= student.firstName %></td>
    <td><%= student.birth %></td>
    <td><%= student.gender %></td>
    <td><%= student.classrooms.collect {|c| c.name } %></td>


    <td>
      <div class="btn-group">
        <%= link_to 'Show', student, :class => "btn btn-info btn-mini" %></button>
        <%= link_to 'Edit', edit_student_path(student), :class => "btn  btn-info btn-mini" %></button>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-mini" %></button>
</div>
    </td>

  </tr>
<% end %>
</tbody>
</table>


<br />

